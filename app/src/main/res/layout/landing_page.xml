<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"

    tools:context=".LandingPageActivity">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:padding="20dp"
        android:orientation="vertical"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent">
    <LinearLayout
        android:id="@+id/landing_page_linear"
        android:layout_width="match_parent"
        android:layout_height="175dp"
        android:background="@color/washed_blue"
        android:orientation="vertical"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent">

        <TextView
            android:id="@+id/tvNamaHari"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="30dp"
            android:layout_marginTop="30dp"
            android:fontFamily="@font/poppins_bold"
            android:text="Senin"
            android:textColor="@color/white"
            android:textSize="42sp" />

        <TextView
            android:id="@+id/tvDateMonthYear"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="30dp"
            android:fontFamily="@font/poppins_bold"
            android:text="dd/mm/yyy"
            android:textColor="@color/white"
            android:textSize="24sp" />
    </LinearLayout>


    <TextView
        android:id="@+id/disediakan_oleh"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:fontFamily="@font/poppins_bold"
        android:text="Disediakan Oleh :"
        android:textColor="@color/digipam_text_blue"
        android:textSize="25sp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/landing_page_linear" />

    <ImageView
        android:id="@+id/logo_bumn"
        android:layout_width="259dp"
        android:layout_height="105dp"

        android:src="@drawable/bumn"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/disediakan_oleh"/>

    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="125dp"

        android:src="@drawable/pam_jaya"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/logo_bumn" />

    </LinearLayout>
    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="56dp"
        android:orientation="horizontal"
        app:layout_constraintBottom_toBottomOf="parent"
        android:background="@color/digipam_text_blue"
        android:paddingLeft="12dp"
        android:paddingRight="12dp"
        >
        <androidx.appcompat.widget.AppCompatButton
            android:id="@+id/btnHome"
            android:minWidth="80dp"
            android:layout_marginLeft="12dp"
            android:layout_marginRight="12dp"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:drawableTop="@drawable/ic_home_inactive"
            android:backgroundTint="@color/transparent"
            android:stateListAnimator="@null"
            app:layout_constraintStart_toStartOf="parent"
            android:text="Home"
            android:textAllCaps="false"
            android:textColor="@color/inactive_navbtn"
            android:textSize="10sp"
            />

        <androidx.appcompat.widget.AppCompatButton
            android:id="@+id/btnAdd"
            android:minWidth="80dp"
            android:layout_marginLeft="12dp"
            android:layout_marginRight="12dp"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:drawableTop="@drawable/ic_baseline_add_circle_outline_24"
            android:backgroundTint="@color/transparent"
            android:stateListAnimator="@null"
            app:layout_constraintStart_toEndOf="@id/btnHome"
            app:layout_constraintEnd_toStartOf="@+id/btnMenu"
            android:text="Add"
            android:textAllCaps="false"
            android:textColor="@color/white"
            android:textSize="10sp"
            />

        <androidx.appcompat.widget.AppCompatButton
            android:id="@+id/btnMenu"
            android:minWidth="80dp"
            android:layout_marginLeft="12dp"
            android:layout_marginRight="12dp"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:drawableTop="@drawable/ic_list"
            android:backgroundTint="@color/transparent"
            android:stateListAnimator="@null"
            app:layout_constraintEnd_toEndOf="parent"
            android:text="List"
            android:textAllCaps="false"
            android:textColor="@color/white"
            android:textSize="10sp"
            />

    </androidx.constraintlayout.widget.ConstraintLayout>
</androidx.constraintlayout.widget.ConstraintLayout>