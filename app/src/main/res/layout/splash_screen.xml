<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="@color/digipam_splashscreen">

    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@drawable/splash_screen_logo"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent"/>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        android:gravity="end"
        android:layout_marginBottom="32dp"
        android:layout_marginRight="12dp">

        <ImageView
            android:id="@+id/bumn_logo_splash"
            android:layout_width="188dp"
            android:layout_height="66dp"
            android:src="@drawable/bumn" />

    <ImageView
        android:id="@+id/pamjaya_logo_splash"
        android:layout_width="102dp"
        android:layout_height="66dp"
        android:src="@drawable/pam_jaya" />
    </LinearLayout>


</androidx.constraintlayout.widget.ConstraintLayout>